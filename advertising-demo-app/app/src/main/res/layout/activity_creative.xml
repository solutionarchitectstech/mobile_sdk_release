<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CreativeActivity">

    <tech.solutionarchitects.advertisingsdk.api.feature.creative.CreativeView
        android:id="@+id/creativeView"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/loadBannerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_html_banner"
        app:layout_constraintBottom_toTopOf="@+id/loadImageBannerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/loadImageBannerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_image_banner"
        app:layout_constraintBottom_toTopOf="@+id/loadMediaButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/loadMediaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_media"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>