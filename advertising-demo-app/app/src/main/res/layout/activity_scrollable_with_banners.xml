<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/scrollViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/teal_200" />

            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/teal_700"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/black"/>

            <tech.solutionarchitects.advertisingsdk.api.view.banner.BannerView
                android:id="@+id/bannerView"
                android:layout_width="300dp"
                android:layout_height="117dp"
                android:layout_margin="32dp"
                android:layout_gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/purple_500"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/teal_700"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/purple_200"/>

            <tech.solutionarchitects.advertisingsdk.api.view.banner.NativeBannerView
                android:id="@+id/nativeBannerView"
                android:layout_width="728px"
                android:layout_height="90px"
                android:layout_gravity="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@android:color/holo_red_dark" />


        </LinearLayout>
    </ScrollView>

    <!-- NOTE(radchenko): `placeholderView` visibility controller -->
    <Button
        android:id="@+id/buttonForPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_show_hide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- NOTE(radchenko): This view is needed to reproduce the scenario when a UI change occurs in the host-app that overlap Banner -->
    <View
        android:id="@+id/placeholderView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_margin="@dimen/spacing_16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>